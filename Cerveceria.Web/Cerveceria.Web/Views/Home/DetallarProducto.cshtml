@model ProductosViewModel
@{
    ViewBag.Title = "Producto";
}

<section class="py-5">
    <form asp-controller="Home" asp-action="AgregarAlCarrito" asp-route-id="@Model.IdProducto">
        <div class="container px-4 px-lg-5 my-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="@Model.RutaImagen" alt="..."></div>
                <div class="col-md-6">
                    @*<div class="small mb-1">@Html.DisplayTextFor(model => model.oMarca.Descripcion)</div>*@
                    <h1 class="display-5 fw-bolder">@Model.Nombre </h1>
                    <div class="fs-5 mb-5">
                        <h3>$@Model.Precio</h3>
                    </div>
                    <p class="lead">@Model.StockInformacion</p>
                    <div class="d-flex">
                        <a href="@Url.Action("ListarProductos", "Home")" class="btn btn-danger w-50 text-center me-3">
                            <i class="fas fa-undo-alt"></i> Volver
                        </a>
                        <button class="btn btn-success btn-agregar-carrito flex-shrink-0 w-50" type="submit">
                            <i class="fas fa-cart-plus"></i> Agregar al carrito
                        </button>

                    </div>
                </div>
            </div>
        </div>
    </form>
    
</section>
